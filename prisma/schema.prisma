generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.png"
  theme    = "forest"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  name      String?
  // Products  Products[]
}

model Products {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  price     Float
  image     String
  shopId    String
  shop      Shops    @relation(fields: [shopId], references: [id])
  cart      Cart?    @relation(fields: [cartId], references: [id])
  cartId    String?
}

model Shops {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  address   String
  products  Products[]
}

model Cart {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  price     Float
  image     String
  quantity  Int
  products  Products[]
}

model Order {
  id         String      @id @default(uuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       String
  email      String
  phone      String
  address    String
  totalPrice Float
  orderItems OrderItem[]
}

model OrderItem {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orderId      String
  productId    String
  productName  String
  quantity     Int
  productPrice Float
  order        Order    @relation(fields: [orderId], references: [id])
}
